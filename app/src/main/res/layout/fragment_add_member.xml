<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alex.week4_homework.AddMemberFragment">

        <TextView
            android:id="@+id/textNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="連絡人姓名"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="連絡人電話"
            android:textSize="24sp"
            android:layout_below="@+id/Nickname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/Nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textNickName"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:hint="輸入姓名"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Nickname"
            android:layout_alignRight="@+id/Nickname"
            android:layout_below="@+id/textPhoneNumber"
            android:layout_marginTop="41dp"
            android:ems="10"
            android:hint="輸入電話"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增連絡人"
            android:onClick="add"
            android:layout_below="@+id/Phonenumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:layout_alignRight="@+id/Phonenumber"
            android:layout_alignEnd="@+id/Phonenumber" />


</RelativeLayout>
